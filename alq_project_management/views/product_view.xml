<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="collection_product_template_common_form" model="ir.ui.view">
        <field name="name">collection.product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <span class="d-inline-block">
                    <field name="is_generic"/>
                    <label for="is_generic"/>
                </span>
                <span class="d-inline-block">
                    <field name="is_allowance"/>
                    <label for="is_allowance"/>
                </span>
            </div>
        </field>
    </record>

</odoo>
